@using Eticaret01.Models
@model List<ProductModel>


<div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var item in Model) //5 tane ürün geldi
    {
        <div class="col-md-4">
            <div class="card">
                <img src="~/Content/img/@item.Image" class="card" alt="...">
                <div class="card-body">
                    <h5 class="card-title" style="height:70px">
                        @if (item.Name.Length > 70)
                        {
                            @item.Name.Substring(0, 70)
                        }
                        else
                        {
                            @item.Name
                        }
                    </h5>
                    <hr />
                    @if (item.Description.Length > 70)
                    {
                        <p class="card-text">
                            @item.Description.Substring(0, 70)...
                        </p>
                    }
                    else
                    { <p class="card-text">
                            @item.Description
                        </p>
                    }


                </div>
                <div class="card-footer">
                    <small class="text-body-secondary">
                        @item.Price ₺
                    </small>
                    <a href="/Home/Details?id=@item.Id" class="btn btn-primary btn-sm float-end"> Ürün Detay</a>
                </div>
            </div>
        </div>
    }

</div>