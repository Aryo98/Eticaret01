@model List<Eticaret01.Entity.Category>

@{ var selectedCategory = Url.RequestContext.RouteData.Values["id"];}

<ul class="list-group">
    <li class="list-group-item">
        <a href="/Home/List" style="text-decoration:none !important">
            Tüm Kategoriler
        </a>
    </li>
    @foreach (var item in Model)
    {
        if (selectedCategory != null)
        {
            if (item.Id == int.Parse(selectedCategory.ToString()))
            {
                <li class="list-group-item active" aria-current="true">
                    <a href="/Home/List/@item.Id" style="text-decoration:none !important; color:white ">
                        <i class="fa-solid fa-angles-right"></i> @item.Name
                    </a>
                </li>
            }
            else
            {
                <li class="list-group-item">
                    <a href="/Home/List/@item.Id" style="text-decoration:none !important">
                        <i class="fa-solid fa-angles-right"></i> @item.Name
                    </a>
                </li>
            }
        }
        else
        {
            <li class="list-group-item">
                <a href="/Home/List/@item.Id" style="text-decoration:none !important">
                    <i class="fa-solid fa-angles-right"></i> @item.Name
                </a>
            </li>
        }

    }


</ul>

