@using Eticaret01.Entity;
@model Product
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-4">
        <img src="~/Content/img/@Model.Image" class="img-responsive w-5" />
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12">
                <h1>@Model.Name #235626</h1>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                @if (Model.IsApproved)
                {
                    <span class="badge bg-primary">Stokta</span>
                }
                else
                {
                    <span class="badge bg-primary">Stokta Yok</span>
                }
                <span class="product-number">#235626</span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <div id="description">
                    @Model.Description
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-4">
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star-half-stroke"></i>
                <span class="badge bg-success">53</span>
            </div>
            <div class="col-md-4" id="write-review" style="margin-left:-50px">
                <a href="#"> Write a review </a>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <h4 id="product-price">@Model.Price₺</h4>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                @using (Html.BeginForm("AddToCart", "Cart"))
                {
                    @Html.HiddenFor(i => i.Id)
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-cart-plus"></i>
                        Add To Cart
                    </button>
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 mt-2">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Description</button>
                <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-paymentMethods" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Payment Methods</button>
                <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-reviews" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">Reviews</button>

            </div>
        </nav>

        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0"> Mi, id sollicitudin urna fermentum ut fusce varius nisl ac ipsum gravida vel pretium tellus. </div>
            <div class="tab-pane fade" id="nav-paymentMethods" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">Mi, id sollicitudin urna fermentum ut fusce varius nisl ac ipsum gravida vel pretium tellus.</div>
            <div class="tab-pane fade" id="nav-reviews" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">Mi, id sollicitudin urna fermentum ut fusce varius nisl ac ipsum gravida vel pretium tellus.</div>

        </div>
    </div>
</div>



